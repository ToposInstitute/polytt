import Data::Polynomial
import Data::Polynomial::Fin

--------------------------------------------------------------------------------

def Vectorₚ : ℕ → Poly :=
  λ n → Σ( tag : #{ .only }), y^({.only = fin n} tag)

def Vector : ℕ → Type → Type := λ n → ofP (Vectorₚ n)

def vnil : Π (A : Type), Vector 0 A :=
  λ _ → ( .only , {} )

